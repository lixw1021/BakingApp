<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_recipe_cover"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_cupcake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_cooking_tools"
        app:layout_constraintStart_toEndOf="@+id/iv_recipe_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="50dp"
        tools:text="Nutella Pie" />

    <TextView
        android:id="@+id/tv_servings_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_servings_number"
        app:layout_constraintStart_toEndOf="@+id/iv_recipe_cover"
        tools:layout_editor_absoluteX="50dp"
        tools:text="Servings : " />

    <TextView
        android:id="@+id/tv_servings_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_servings_text"
        app:layout_constraintEnd_toStartOf="@+id/iv_cooking_tools"
        app:layout_constraintStart_toEndOf="@+id/tv_servings_text"
        tools:layout_editor_absoluteX="187dp"
        tools:text="8" />

    <ImageView
        android:id="@+id/iv_cooking_tools"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_spatula"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="324dp" />

    <TextView
        android:layout_width="358dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_cooking_tools"
        app:layout_constraintStart_toStartOf="@+id/iv_recipe_cover"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>