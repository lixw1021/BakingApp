<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_recipe_cover"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_cupcake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/iv_recipe_cover"
        app:layout_constraintEnd_toStartOf="@+id/iv_cooking_tools"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nutella Pie"
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/tv_servings_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_recipe_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_servings_number"
        android:layout_marginBottom="10dp"
        android:gravity="end"
        tools:text="Servings : "
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/tv_servings_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_servings_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_servings_text"
        app:layout_constraintEnd_toStartOf="@+id/iv_cooking_tools"
        tools:text="8"
        tools:layout_editor_absoluteX="187dp" />

    <ImageView
        android:id="@+id/iv_cooking_tools"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_spatula"
        tools:layout_editor_absoluteX="324dp" />

</android.support.constraint.ConstraintLayout>